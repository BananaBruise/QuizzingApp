<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8b246"
    tools:context=".QuestionerSyncActivity">

    <EditText
        android:id="@+id/PromptET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="1024dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please use the following code to sync with student"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20999998" />

    <TextView
        android:id="@+id/CodeET"
        android:layout_width="58dp"
        android:layout_height="15dp"
        android:text="CODE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PromptET"
        app:layout_constraintVertical_bias="0.100000024" />

    <Button
        android:id="@+id/syncBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My student is synced"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CodeET"
        app:layout_constraintVertical_bias="0.19999999" />
</androidx.constraintlayout.widget.ConstraintLayout>